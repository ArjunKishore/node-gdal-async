{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch unit testing (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/node",
            "args": [
                "--expose-gc",
                "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
                "test", "-R", "tap",
                "--timeout", "0",
                "--require", "ts-node/register",
                "--require", "./test/_common.js",
                "--require", "./test/_hooks.js",
                "test/*.ts"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch unit testing (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/local/bin/node",
            "args": [
                "--expose-gc",
                "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
                "test", "-R", "tap",
                "--timeout", "0",
                "--require", "ts-node/register",
                "--require", "./test/_common.js",
                "--require", "./test/_hooks.js",
                "test/*.ts"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "Launch unit testing (vsdbg)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "node.exe",
            "args": [
                "--expose-gc",
                "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
                "test", "-R", "tap",
                "--timeout", "0",
                "--require", "ts-node/register",
                "--require", "./test/_common.js",
                "--require", "./test/_hooks.js",
                "test/*.ts"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch unit testing (JS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "test",
                "-R", "tap",
                "--timeout", "0",
                "--expose-gc",
                "--require", "ts-node/register",
                "--require", "./test/_common.js",
                "--require", "./test/_hooks.js",
                "test/*.ts"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/mocha"
        }
    ]
}