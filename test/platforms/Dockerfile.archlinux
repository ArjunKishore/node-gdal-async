ARG VERSION=latest
FROM archlinux:${VERSION}

ARG NODEJS=lts
ARG GDAL=""
ENV GDAL=${GDAL}
ENV USER=root

RUN \
  pacman --noconfirm -Sy && \
  pacman --noconfirm -Sy base-devel git && \
  pacman --noconfirm -Sy nodejs npm

RUN if [ "${GDAL}" = "shared" ]; then pacman --noconfirm -Sy gdal; fi

COPY entrypoint.sh /

ENTRYPOINT ["/entrypoint.sh"]
